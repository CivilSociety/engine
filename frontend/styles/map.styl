#map
	position fixed !important
	height 100%
	width 100%
	z-index 10
.place-dialog
	button
		margin-top 15px
	padding 10px
	font-size 1.5rem
#place-tooltip
	position absolute
	background darkgreen
	color white
	padding 10px
	display none
	z-index 1000


#place-tooltip:after, #place-tooltip:before {
	right: 100%;
	top: 50%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

#place-tooltip:after {
	border-color: rgba(0, 0, 0, 0);
	border-right-color: darkgreen;
	border-width: 10px;
	margin-top: -10px;
}
#place-tooltip:before {
	border-width: 13px;
	margin-top: -13px;
}