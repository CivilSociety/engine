.button
	cursor pointer
	font-size 0.9em
	padding 10px
	border 0
	margin 5px
	&:hover
		outline 1px solid black

.save-button
	@extend .button
	background-color rgb(0, 162, 175)
	color white

.cancel-button
	@extend .button
	background-color transparent
	color black

.vote-button
	@extend .button
	background-color rgb(0, 162, 175)
	color white

.share-fb-button
	@extend .button
	background-color transparent
	color black

.disabled-button
	background-color silver !important
