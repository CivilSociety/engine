#modal-container
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	display none
	background rgba(0,0,0,0.1)
	z-index 99999
#modal
	width 400px
	position relative
	margin 10% auto
	padding 5px 20px 13px 20px
	background-color rgba(255, 255, 255, 0.8)

.addPlaceModal
	h1
		text-transform uppercase
		font-size 1.2em
	input
		border 0
		border-bottom 1px dotted grey
		background-color transparent
		display block
		width 100%
		font-size 1em
		padding 5px 0
		margin 10px 0
	textarea
		display block
		background-color transparent
		border 0
		font-size 1em
		width 100%
		margin 10px 0
		height 7em